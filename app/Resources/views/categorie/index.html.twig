{% extends 'base.html.twig' %}

{% block body %}
  
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Categories list</h3>
        </div>
            <!-- /.box-header -->
        <div class="box-body">
            <div id="example1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
            <div class="row">
                <div class="col-sm-6">
                    <div class="dataTables_length" id="example1_length">
                        <a href="{{ path('categorie_new') }}" class="btn btn-block btn-info btn-flat" style="width: 200px">Create a new categorie</a>
                    </div>
                </div>
                <div class="col-sm-12">
                    <table id="example1" class="table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info">
                <thead>
                <tr role="row">
                    <th class="sorting_asc" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" style="width: 231.033px;" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending">Id</th>
                    <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" style="width: 282.933px;" aria-label="Browser: activate to sort column ascending">Name</th>
                    <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" style="width: 250.867px;" aria-label="Platform(s): activate to sort column ascending">Action</th>
                </tr>
                </thead>
                    <tbody>
                            {% for categorie in categories %}
                                 <tr role="row" class="odd">
                                    <td><a href="{{ path('categorie_show', { 'id': categorie.id }) }}">{{ categorie.id }}</a></td>
                                    <td>{{ categorie.name }}</td>
                                    <td>
                                        <div class="btn-group">
                                          
                                          <a class="btn btn-success" href="{{ path('categorie_edit', { 'id': categorie.id }) }}"><i class="fa fa-edit"></i></a>
                                           <a class="btn btn-danger" href="{{ path('categorie_delete', { 'id': categorie.id }) }}"><i class="fa fa-trash"></i></a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                    </tbody>

      
                  </table>
          </div>
      </div>

    </div>
    <!-- /.box-body -->
</div>

{% endblock %}
